@model StammtischControl.Models.Entidades.CadastroGeral.Participante
@{
    ViewBag.Title = "Cadastro Participante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
<section class="container">
    <h2>Cadastrar Participante</h2>


    <form method="POST">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>*Nome</label>
                    @Html.TextBoxFor(x => x.Nome, new {@class = "form-control", @placeholder = "João da Silva Miranda"})
                    <p class="text-danger">
                        @Html.ValidationMessageFor(x => x.Nome)
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>*CPF</label>
                    @Html.TextBoxFor(x => x.CPF, new { @class = "form-control", @placeholder = "01232114565" })
                    <p class="text-danger">
                        @Html.ValidationMessageFor(x => x.CPF)
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>*E-mail</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "admin@dominio.com" })
                    <p class="text-danger">
                        @Html.ValidationMessageFor(x => x.Email)
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>*Telefone</label>
                    @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", @placeholder = "(47)9999-0876" })
                    <p class="text-danger">
                        @Html.ValidationMessageFor(x => x.Telefone)
                    </p>
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index", new {}, new {@class = "btn btn-danger"})
            <input id="salvar" type="submit" value="Salvar" class="btn btn-success"/>
        </div>
    </form>
</section>